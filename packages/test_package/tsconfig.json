{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "isolatedModules": true,
    "outDir": "dist/",
    "rootDir": "src/",
    "paths": {
      "./*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}